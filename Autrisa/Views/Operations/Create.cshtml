@model Autrisa.Models.Operation

@{
    ViewData["Title"] = "Agregar Movimientos";
}

<div class="col-12">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="card border rounded-3">
            <div class="card-header  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <h5 class="mb-2 mb-sm-0">Agregar Movimientos</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-4">     
                        <div class="form-group">
                            <label name="customer" id="customer" class="control-label">Cliente</label>
                            <input name="customer" id="customer" class="form-control" type="text" required />
                            @*<span asp-validation-for="Number" class="text-danger"></span>*@
                        </div>
                        <div class="form-group">
                            <label asp-for="Type" class="control-label"></label>
                            <select name="Type" id="Type" class="form-select">
                                <option value="0">Ingreso</option>
                                <option value="1">Egreso</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Modality" class="control-label"></label>
                            <select name="Modality" id="Modality" class="form-select">
                                <option value="0">Cheque</option>
                                <option value="1">Transferencia</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Number" class="control-label"></label>
                            <input asp-for="Number" class="form-control" type="text" required />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AccountId" class="control-label"></label>
                            <select asp-for="AccountId" class="form-select" asp-items="@ViewBag.AccountId"></select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label name="OperationType" id="OperationType" class="control-label">Tipo de operaci&oacute;n</label>
                            <select name="Modality" id="Modality" class="form-select">
                                <option value="0">Operaci&oacute;n normal</option>
                                <option value="1">Pr&eacute;stamo</option>
                                <option value="2">Inversi&oacute;n</option>
                                <option value="3">Predio</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Cuenta a operar</label>
                            <select name="AccountOper" id="AccountOper" class="form-select" asp-items="@ViewBag.AccountId"></select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OperationDate" class="control-label"></label>
                            <input asp-for="OperationDate" class="form-control" type="text" required />
                            <span asp-validation-for="OperationDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Concept" class="control-label"></label>
                            <input asp-for="Concept" class="form-control" type="text" required />
                            <span asp-validation-for="Concept" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" type="text" required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label name="montoTransaccion" class="control-label">Monto de movimiento</label>
                            <input name="montoTransaccion" id="montoTransaccion" class="form-control" type="text" required />
                        </div>
                        @*<div class="form-group">
                            <label asp-for="Outcome" class="control-label"></label>
                            <input asp-for="Outcome" class="form-control"  type="text" />
                            <span asp-validation-for="Outcome" class="text-danger"></span>
                        </div>*@
                        <input type="hidden" value="@DateTime.Now.ToString("dd/MM/yyyy")" id="Created" name="Created" />
                    </div>

                </div>
            </div>
            <div class="card-footer  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <button class="btn btn-sm btn-info" onclick="history.back()"><i class="fa-solid fa-arrow-left"></i> Regresar</button>
                    <button class="btn btn-sm btn-primary" type="submit" id="btnSave" asp-route-Monto="montoTransaccion"><i class="fa-solid fa-floppy-disk"></i>  Agregar </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="~/assets/vendor/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/assets/vendor/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/assets/vendor/jquery-ui/jquery.ui.datepicker-es.js"></script>

    <script>
        $.datepicker.setDefaults($.datepicker.regional["es"]);
    
        $(document).ready(function () {
            $( "#OperationDate" ).datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: "dd/mm/yy"
            });

            $("form").submit(function (event) {
                $("#btnSave").html('<i class="fa-solid fa-spinner fa-spin-pulse"></i> Procesando');
                $("#btnSave").prop('disabled', true);
            });

            $("form").submit(function (event) {
                event.preventDefault();

                if (!/^[0-9]+(\.)?[0-9]*$/.test($("#montoTransaccion").val())) {

                    alert("Monto incorecto");
                    return false;
                }

                $("#btnSave").html('<i class="fa-solid fa-spinner fa-spin-pulse"></i> Procesando');
                $("#btnSave").prop('disabled', true);

                event.currentTarget.submit();
            });










            $('#AccountId').on('change', function () {
                var id = $(this).val(); // Obtener el valor seleccionado
                var oper = $('#OperationType')
                // Hacer una petición AJAX al servidor
                $.ajax({
                    url: '/Operations/Elementos', // La URL del controlador y la acción que manejarán la petición
                    type: 'POST',
                    data: { id: id }, // Enviar el ID seleccionado como parámetro
                    success: function (response) {
                        // Actualizar el segundo Select con la respuesta del servidor
                        var select = $('#AccountOper');
                        select.empty(); // Eliminar todas las opciones anteriores
                        $.each(response, function (index, value) {
                            if (value.credittype == 11) {
                                select.append('<option value="' + value.value + '">' + " Ahorro " + value.text + '</option>');
                            }
                            else if (value.credittype == 1) {
                                select.append('<option value="' + value.value + '">' + " Crédito diario " + value.text + '</option>');
                            }
                            else if (value.credittype == 2) {
                                select.append('<option value="' + value.value + '">' + " Crédito semanal " + value.text + '</option>');
                            }
                            else if (value.credittype == 3) {
                                select.append('<option value="' + value.value + '">' + " Crédito mensual " + value.text + '</option>');
                            }
                            else {
                                select.append('<option value="' + value.value + '">' + " Crédito paralelo " + value.text + '</option>');
                            }

                        });
                    },
                    error: function () {
                        alert('Error al cargar la lista');
                    }
                });
            });

        });
    </script>
}