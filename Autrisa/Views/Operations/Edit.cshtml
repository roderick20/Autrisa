@model Autrisa.Models.Operation

@{
    ViewData["Title"] = "Editar Movimientos";
}

<div class="col-12">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="UniqueId" />
        <div class="card border rounded-3">
            <div class="card-header  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <h5 class="mb-2 mb-sm-0">Editar Movimientos</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-4">
                        @*<div class="form-group">
                            <label class="control-label">Banco</label>
                            <select id="BankId" name="BankId" class="form-select" asp-items="@ViewBag.BankId">
                                <option value=""></option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tipo de operaci&oacute;n</label>
                            <select name="OperationType" id="OperationType" class="form-select">
                                <option value=""></option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Cuenta de cargo</label>
                            <select asp-for="AccountId" class="form-select">
                                <option value=""></option>
                            </select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <label asp-for="Type" class="control-label"></label>
                            <select name="Type" id="Type" class="form-select">
                                <option value="0">Ingreso</option>
                                <option value="1">Egreso</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Modality" class="control-label"></label>
                            <select name="Modality" id="Modality" class="form-select">
                                <option value="0">Cheque</option>
                                <option value="1">Transferencia</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Number" class="control-label"></label>
                            <input asp-for="Number" class="form-control" type="text" required />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OperationDate" class="control-label"></label>
                            <input name="operDate" id="operDate" class="form-control" type="text" required value="@Model.OperationDate.ToString("dd/MM/yyyy")" />
                            <span asp-validation-for="OperationDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Concept" class="control-label"></label>
                            <input asp-for="Concept" class="form-control" type="text" required />
                            <span asp-validation-for="Concept" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" type="text" required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        @if (Model.Type == 0)
                        {
                            <div class="form-group">
                                <label class="control-label">Monto</label>
                                <input asp-for="Income" class="form-control" type="text" required />
                                <span asp-validation-for="Income" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label class="control-label">Monto</label>
                                <input asp-for="Outcome" class="form-control" type="text" required />
                                <span asp-validation-for="Outcome" class="text-danger"></span>
                            </div>
                        }
                        <hr />
                        <div class="form-group">
                            <label class="control-label">Receptor</label>
                            <input name="Receptor" id="Receptor" class="form-control" type="text" />
                        </div>
                        <input type="hidden" value="@DateTime.Now.ToString("dd/MM/yyyy")" id="Created" name="Created" />
                    </div>
                </div>
            </div>
            <div class="card-footer  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <button class="btn btn-sm btn-info" onclick="history.back()"><i class="fa-solid fa-arrow-left"></i> Regresar</button>
                    <button class="btn btn-sm btn-primary" type="submit" id="btnSave"><i class="fa-solid fa-floppy-disk"></i>  Grabar </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link href="~/assets/vendor/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/assets/vendor/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/assets/vendor/jquery-ui/jquery.ui.datepicker-es.js"></script>

    <script>
        $(document).ready(function () {

            $("#operDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: "dd/mm/yy"
            });

            $("form").submit(function (event) {
                $("#btnSave").html('<i class="fa-solid fa-spinner fa-spin-pulse"></i> Procesando');
                $("#btnSave").prop('disabled', true);
            });
        });
    </script>
}