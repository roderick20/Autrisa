@model Autrisa.Models.Property

@{
    ViewData["Title"] = "Editar Predio";
}

<div class="col-12">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="UniqueId" />
        <div class="card border rounded-3">
            <div class="card-header  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <h5 class="mb-2 mb-sm-0">Editar Predio</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" type="text" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Number" class="control-label"></label>
                            <input asp-for="Number" class="form-control" type="text" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Participation" class="control-label"></label>
                            <input asp-for="Participation" class="form-control" type="text" />
                            <span asp-validation-for="Participation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" type="text" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Receptor" class="control-label"></label>
                            <input asp-for="Receptor" class="form-control" type="text" />
                            <span asp-validation-for="Receptor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" type="text" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="AccountId" class="control-label"></label>
                            <select asp-for="AccountId" class="form-select" asp-items="@ViewBag.AccountId"></select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <button class="btn btn-sm btn-info" onclick="history.back()"><i class="fa-solid fa-arrow-left"></i> Regresar</button>
                    <button class="btn btn-sm btn-primary" type="submit" id="btnSave"><i class="fa-solid fa-floppy-disk"></i>  Grabar </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("form").submit(function (event) {
                $("#btnSave").html('<i class="fa-solid fa-spinner fa-spin-pulse"></i> Procesando');
                $("#btnSave").prop('disabled', true);
            });

            $("form").submit(function (event) {
                event.preventDefault();

                if (!/^[0-9]+(\.)?[0-9]*$/.test($("#Amount").val())) {

                    alert("Monto incorecto");
                    return false;
                }

                $("#btnSave").html('<i class="fa-solid fa-spinner fa-spin-pulse"></i> Procesando');
                $("#btnSave").prop('disabled', true);

                event.currentTarget.submit();
            });
        });
    </script>
}