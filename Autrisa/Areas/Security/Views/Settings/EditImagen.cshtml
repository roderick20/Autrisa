@model Autrisa.Models.Setting

@{
    ViewData["Title"] = "Edit";
}

<div class="col-12">
    <form asp-action="EditImagen" enctype="multipart/form-data">
        <div class="card border rounded-3">
            <div class="card-header  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <h5 class="mb-2 mb-sm-0">Configuraci√≥n</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UniqueId" />
                                              
                        

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Imagen</label>
                                <input type="file" class="form-control" id="file" name="file" accept="image/jpeg, image/png, image/jpg" required />
                            </div>
                            <div class="form-group mt-1">
                                <img id="preview" src="" class="img-fluid img-thumbnail" alt="Image preview...">
                            </div>
                        </div>

                    </div>                    
                </div>
            </div>
            <div class="card-footer  border-bottom p-3">
                <div class="d-sm-flex justify-content-between align-items-center">
                    <a class="btn btn-sm btn-info" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Regresar</a>
                    <button class="btn btn-sm btn-primary" type="submit"> <i class="fa-solid fa-plus"></i> Agregar </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const preview = document.querySelector('#preview');

        const image_input = document.querySelector("#file"); image_input.addEventListener("change", function () {
            const reader = new FileReader();
            reader.addEventListener("load", () => {
                preview.src = reader.result;
            });
            reader.readAsDataURL(this.files[0]);
        });
        
    </script>
    }